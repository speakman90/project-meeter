{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

<div class="flex flex-col justify-around">
    <div class="flex flex-row justify-around w-screen">
        <div class="img-home"> 
            <img src="{{asset('build/images/img-home-1.jpg')}}"/>
        </div>
        <div class="img-home">
            <img src="{{asset('build/images/img-home-2.jpg')}}"/>
        </div>
    </div>
    <div class="flex flex-col items-center">
        <div class="flex flex-col items-center">
            <h1 class="text-2xl font-bold">Trouve ton humain</h1>
        </div>
        <div class="flex flex-col items-center">
            <button data-modal-target="registerModal" data-modal-toggle="registerModal" class="rounded-full bg-[#4C164D] p-3 px-12 m-2 text-white" type="button">
                Inscris-toi
            </button>
            <button data-modal-target="loginModal" data-modal-toggle="loginModal" class="rounded-full bg-[#4C164D] p-3 px-12 m-2 text-white" type="button">
                Connecte-toi
            </button>
        </div>
    </div>
</div>

<!-- Main modal -->
<div id="registerModal" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-modal md:h-full">
    <div class="relative w-full h-full max-w-2xl md:h-auto">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <!-- Modal header -->
            <div class="flex items-start justify-between p-4 border-b rounded-t dark:border-gray-600">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                    Inscrit toi !
                </h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="registerModal">
                    <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                    <span class="sr-only">Quitter</span>
                </button>
            </div>
            <!-- Modal body -->
                 {{ render(controller('App\\Controller\\RegistrationController::register')) }}
            <!-- Modal footer -->
            {# <div class="flex items-center justify-center p-6 space-x-2 border-t border-gray-200 rounded-b dark:border-gray-600">
                    <button class="btn btn-lg btn-primary" type="submit">
                        Valider mon inscription
                    </button>
                </form>
            </div> #}
        </div>
    </div>
</div>

<!-- Main modal -->
<div id="loginModal" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-modal md:h-full">
    <div class="relative w-full h-full max-w-2xl md:h-auto">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <!-- Modal header -->
            <div class="flex items-start justify-between p-4 border-b rounded-t dark:border-gray-600">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                    Tu as déjà un compte ?
                </h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="loginModal">
                    <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                    <span class="sr-only">Quitter</span>
                </button>
            </div>
            <!-- Modal body -->
                 {{ render(controller('App\\Controller\\SecurityController::login')) }}
        </div>
    </div>
</div>

{% include 'footer.html.twig' %}

{% endblock %}

